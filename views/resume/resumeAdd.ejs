<%- include("../includes/header.ejs", {title:"Add New Resume"}); %>

<h1>Add New Resume</h1>
<form action="/resume/insert" method="get">
    Resume Name: <input id="resume_name" name="resume_name" type="text" />
    <br />
    <br />
    Account Name
    <br />
    <select id="account_id" name="account_id">
        <% for(var i=0; account.length > i; i++ ) { %>
        <option value="<%= account[i].account_id %>"><%= account[i].first_name + ' ' + account[i].last_name %></option>
        <% } %>
    </select>
    <br />
    <br />
    Skill(s)
    <br />
    <select id="skill_id" name="skill_id" multiple="multiple">
        <% for(var x=0; skill.length > x; x++ ) { %>
        <option value="<%= skill[x].skill_id %>"><%= skill[x].skill_name %></option>
        <% } %>
    </select>
    <br />
    <br />
    Company(s)
    <br />
    <select id="company_id" name="company_id" multiple="multiple">
        <% for(var x=0; company.length > x; x++ ) { %>
        <option value="<%= company[x].company_id %>"><%= company[x].company_name %></option>
        <% } %>
    </select>
    <br />
    <br />
    School(s)
    <br />
    <select id="school_id" name="school_id" multiple="multiple">
        <% for(var x=0; school.length > x; x++ ) { %>
        <option value="<%= school[x].school_id %>"><%= school[x].school_name %></option>
        <% } %>
    </select>


    <!-- Initialize the multiselect plugin: -->
    <script type="text/javascript">
        $(document).ready(function() {
            $('#skill_id').multiselect();
            $('#company_id').multiselect();
            $('#school_id').multiselect();
        });
    </script>

    <br />
    <input type="submit" />
</form>

<%- include("../includes/footer.ejs"); %>
